<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.openmrs.mobile"
    android:versionCode="4"
    android:versionName="Beta 2.1.2-SNAPSHOT" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name="org.openmrs.mobile.application.OpenMRS"
        android:allowBackup="true"
        android:icon="@drawable/ic_openmrs"
        android:label="@string/app_name"
        android:theme="@style/Theme.Openmrs" >
        <meta-data
            android:name="buildVersion"
            android:value="0" />

        <provider
            android:name="org.odk.collect.android.openmrs.provider.OpenMRSFormsProvider"
            android:authorities="org.odk.collect.android.openmrs.provider.odk.forms"
            android:exported="false" />
        <provider
            android:name="org.odk.collect.android.openmrs.provider.OpenMRSInstanceProvider"
            android:authorities="org.odk.collect.android.openmrs.provider.odk.instances"
            android:exported="false" />

        <receiver android:name="org.openmrs.mobile.application.OpenMRSBroadcastReceiver" >
            <intent-filter>
                <action android:name="org.openmrs.mobile.intent.action.AUTH_FAILED_BROADCAST" />
                <action android:name="org.openmrs.mobile.intent.action.UNAUTHORIZED_BROADCAST" />
                <action android:name="org.openmrs.mobile.intent.action.CONN_TIMEOUT_BROADCAST" />
                <action android:name="org.openmrs.mobile.intent.action.NO_INTERNET_CONNECTION_BROADCAST" />
                <action android:name="org.openmrs.mobile.intent.action.SERVER_UNAVAILABLE_BROADCAST" />
                <action android:name="org.openmrs.mobile.intent.action.SERVER_ERROR_BROADCAST" />
                <action android:name="org.openmrs.mobile.intent.action.SOCKET_EXCEPTION_BROADCAST" />
                <action android:name="org.openmrs.mobile.intent.action.SERVER_NOT_SUPPORTED_BROADCAST" />
            </intent-filter>
        </receiver>

        <activity
            android:name="org.openmrs.mobile.activities.DashboardActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.openmrs.mobile.activities.DialogActivity"
            android:noHistory="true"
            android:theme="@style/NoActionBarTheme" >
        </activity>
        <activity
            android:name="org.openmrs.mobile.activities.FindPatientsActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:label="@string/action_find_patients"
            android:launchMode="singleTop" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DashboardActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.openmrs.mobile.activities.FindPatientsSearchActivity"
            android:label="@string/action_find_patients"
            android:launchMode="singleTop" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.FindPatientsActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.openmrs.mobile.activities.LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:noHistory="true"
            android:theme="@style/NoActionBarTheme" >
        </activity>
        <activity
            android:name="org.openmrs.mobile.activities.SettingsActivity"
            android:label="@string/action_settings"
            android:noHistory="true" >
        </activity>
        <activity android:name="org.openmrs.mobile.activities.PatientDashboardActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.FindPatientsActivity" />
        </activity>
        <activity
            android:name="org.openmrs.mobile.activities.FindActiveVisitsActivity"
            android:label="@string/action_active_visits"
            android:launchMode="singleTop" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DashboardActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.openmrs.mobile.activities.FindActiveVisitsSearchActivity"
            android:label="@string/action_active_visits"
            android:launchMode="singleTop" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.FindActiveVisitsActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.openmrs.mobile.activities.VisitDashboardActivity"
            android:label="@string/visit_dashboard_label"
            android:launchMode="singleTop" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.FindActiveVisitsActivity" />
        </activity>
        <activity
            android:name="org.openmrs.mobile.activities.FormEntryActivity"
            android:label="@string/action_active_visits"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="org.openmrs.mobile.activities.CaptureVitalsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/action_capture_vitals" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DashboardActivity" />
        </activity>
    </application>

</manifest>