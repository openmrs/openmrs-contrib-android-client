<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.openmrs.mobile"
    android:versionCode="1"
    android:versionName="1.0.1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".application.OpenMRS"
        android:allowBackup="true"
        android:icon="@drawable/ic_openmrs"
        android:label="@string/app_name"
        android:theme="@style/Theme.Openmrs">
        <meta-data
            android:name="AA_DB_NAME"
            android:value="@string/aadbname" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="@integer/aadbversion" />
        <meta-data
            android:name="buildVersion"
            android:value="0" />

        <provider
            android:name="org.odk.collect.android.openmrs.provider.OpenMRSFormsProvider"
            android:authorities="org.odk.collect.android.openmrs.provider.odk.forms"
            android:exported="false" />
        <provider
            android:name="org.odk.collect.android.openmrs.provider.OpenMRSInstanceProvider"
            android:authorities="org.odk.collect.android.openmrs.provider.odk.instances"
            android:exported="false" />

        <receiver android:name=".application.OpenMRSBroadcastReceiver">
            <intent-filter>
                <action android:name="org.openmrs.mobile.intent.action.AUTH_FAILED_BROADCAST" />
                <action android:name="org.openmrs.mobile.intent.action.UNAUTHORIZED_BROADCAST" />
                <action android:name="org.openmrs.mobile.intent.action.CONN_TIMEOUT_BROADCAST" />
                <action android:name="org.openmrs.mobile.intent.action.NO_INTERNET_CONNECTION_BROADCAST" />
                <action android:name="org.openmrs.mobile.intent.action.SERVER_UNAVAILABLE_BROADCAST" />
                <action android:name="org.openmrs.mobile.intent.action.SERVER_ERROR_BROADCAST" />
                <action android:name="org.openmrs.mobile.intent.action.SOCKET_EXCEPTION_BROADCAST" />
                <action android:name="org.openmrs.mobile.intent.action.SERVER_NOT_SUPPORTED_BROADCAST" />
            </intent-filter>
        </receiver>
        <receiver android:name=".api.SyncStateReceiver">
            <intent-filter>
                <action android:name="org.openmrs.mobile.intent.action.SYNC_PATIENTS" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".activities.DashboardActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.DialogActivity"
            android:noHistory="true"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name=".activities.FindSyncedPatientsActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:label="@string/action_synced_patients"
            android:launchMode="singleTop"
            android:theme="@style/AppThemeOrig">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DashboardActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.FindPatientsSearchActivity"
            android:label="@string/action_find_patients"
            android:launchMode="singleTop"
            android:theme="@style/AppThemeOrig">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.FindSyncedPatientsActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:noHistory="true"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/action_settings"
            android:noHistory="true" />
        <activity
            android:name=".activities.PatientDashboardActivity"
            android:theme="@style/AppThemeOrig">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.FindSyncedPatientsActivity" />
        </activity>
        <activity
            android:name=".activities.FindActiveVisitsActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:label="@string/action_active_visits"
            android:launchMode="singleTop"
            android:theme="@style/AppThemeOrig">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DashboardActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.FindActiveVisitsSearchActivity"
            android:label="@string/action_active_visits"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.FindActiveVisitsActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.VisitDashboardActivity"
            android:label="@string/visit_dashboard_label"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.FindActiveVisitsActivity" />
        </activity>
        <activity
            android:name=".activities.FormListActivity"
            android:label="@string/action_form_entry"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.PatientListActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.PatientListActivity" />
        </activity>
        <activity
            android:name=".activities.PatientListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/action_form_entry"
            android:parentActivityName=".activities.DashboardActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DashboardActivity" />
        </activity>
        <activity
            android:name=".activities.RegisterPatientActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/action_register_patient"
            android:parentActivityName=".activities.DashboardActivity"
            android:theme="@style/AppTheme">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DashboardActivity" />
        </activity>

        <service
            android:name=".api.PatientService"
            android:enabled="true" />
        <service
            android:name=".api.EncounterService"
            android:enabled="true" />
        <service
            android:name=".api.FormListService"
            android:enabled="true" />

        <activity
            android:name=".activities.FormDisplayActivity"
            android:label="@string/title_activity_form_create"
            android:parentActivityName=".activities.FormListActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.openmrs.mobile.activities.FormListActivity" />
        </activity>

        <activity
            android:name=".activities.FindLastViewedPatientsActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:label="@string/action_download_patients"
            android:launchMode="singleTop"
            android:theme="@style/AppThemeOrig">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DashboardActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>

    </application>

</manifest>