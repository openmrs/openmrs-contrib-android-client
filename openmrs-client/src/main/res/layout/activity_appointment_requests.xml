<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/appointmentRequestsContentFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow android:layout_width="match_parent">
                <FrameLayout
                    android:id="@+id/t1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                </FrameLayout>
            </TableRow>
            <TableRow android:layout_weight="1">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow>
                            <TextView android:text="Patient"
                                android:layout_weight="1"
                                android:textSize="15dp"
                                android:background="#dddddd"
                                android:textAlignment="center"/>
                            <TextView android:text="Service Type"
                                android:layout_weight="1"
                                android:textSize="15dp"
                                android:background="#dddddd"
                                android:textAlignment="center"/>
                            <TextView android:text="Provider"
                                android:layout_weight="1"
                                android:textSize="15dp"
                                android:background="#dddddd"
                                android:textAlignment="center"/>
                            <TextView android:text="Time"
                                android:layout_weight="1"
                                android:textSize="15dp"
                                android:background="#dddddd"
                                android:textAlignment="center"/>
                            <TextView android:text="Actions"
                                android:layout_weight="1"
                                android:textSize="15dp"
                                android:background="#dddddd"
                                android:textAlignment="center"/>
                        </TableRow>
                        <TableRow>
                        <TextView
                            android:id="@+id/name"
                            android:layout_weight="1"

                            android:text="John Doe"
                            android:textAlignment="center"
                            android:textSize="15dp" />

                        <TextView android:text="Mental Health"
                            android:layout_weight="1"

                            android:textSize="15dp"
                            android:textAlignment="center"/>

                        <TextView android:text="Jake Smith"
                            android:layout_weight="1"
                            android:textSize="15dp"

                            android:textAlignment="center"/>
                        <TextView android:text=""
                            android:layout_weight="1"
                            android:textSize="15dp"

                            android:textAlignment="center"/>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_height="match_parent">

                                <Button

                                    android:id="@+id/button2"
                                    android:layout_width="15dp"


                                    android:layout_height="match_parent"

                                    android:background="@android:drawable/ic_menu_my_calendar"
                                    android:gravity="center_vertical|center_horizontal" />

                                <Button

                                    android:id="@+id/button3"
                                    android:layout_width="15dp"


                                    android:layout_height="match_parent"

                                    android:background="@drawable/ico_edit"
                                    android:gravity="center_vertical|center_horizontal" />

                                <Button

                                    android:layout_width="17dp"
                                    android:layout_height="match_parent"

                                    android:background="@android:drawable/ic_delete"

                                    android:gravity="center_vertical|center_horizontal" />
                            </LinearLayout>

                        </TableRow>
                    </TableLayout>
                </ScrollView>

            </TableRow>
        </TableLayout>
    </FrameLayout>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:elevation="0dp"
        android:layout_height="wrap_content">
    </android.support.design.widget.AppBarLayout>


</LinearLayout>