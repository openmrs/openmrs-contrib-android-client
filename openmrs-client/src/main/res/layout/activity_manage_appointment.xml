<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/manageAppointmentContentFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TableRow>

                        <TextView
                            android:layout_weight="1"
                            android:background="#dddddd"
                            android:text="Identifier"
                            android:textSize="20dp"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_weight="1"
                            android:background="#dddddd"
                            android:text="Name"
                            android:textAlignment="center"
                            android:textSize="20dp" />

                        <TextView android:text="Gender"
                            android:layout_weight="1"
                            android:background="#dddddd"
                            android:textSize="20dp"
                            android:textAlignment="center"/>

                        <TextView android:text="Age"
                            android:layout_weight="1"
                            android:textSize="20dp"
                            android:background="#dddddd"
                            android:textAlignment="center"/>
                        <TextView android:text="Birthday"
                            android:layout_weight="1"
                            android:textSize="20dp"
                            android:background="#dddddd"
                            android:textAlignment="center"/>
                    </TableRow>
                    <TableRow>

                        <TextView
                            android:layout_weight="1"

                            android:text="1003A5"
                            android:textSize="20dp"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_weight="1"

                            android:text="John Doe"
                            android:textAlignment="center"
                            android:textSize="20dp" />

                        <TextView android:text="M"
                            android:layout_weight="1"

                            android:textSize="20dp"
                            android:textAlignment="center"/>

                        <TextView android:text="20"
                            android:layout_weight="1"
                            android:textSize="20dp"

                            android:textAlignment="center"/>
                        <TextView android:text="02 May 1997"
                            android:layout_weight="1"
                            android:textSize="20dp"

                            android:textAlignment="center"/>
                    </TableRow>

                </TableLayout></ScrollView>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
