<resources xmlns:android="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColor">@color/dark_purple</item>

        <item name="actionBarTabTextStyle">@style/Tabtext</item>

        <item name="actionModeStyle">@style/LongPress</item>



    </style>

    <style name="LongPress" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/primary_dark</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="Tabtext" parent="Base.Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/tabcolor</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item> <!-- For 2.x version  -->
    </style>

    <style name="TextLabel" parent="">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="DialogLabelBorderless">
        <item name="android:background">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextLabel.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="Divider.Horizontal.DarkGray">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="Divider.Vertical.NoStickyEdges">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="AddressFields">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AddressFieldsLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>
</resources>
