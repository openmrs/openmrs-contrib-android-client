<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item> <!-- For 2.x version  -->
    </style>

    <style name="TextLabel" parent="">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="DialogLabelBorderless">
        <item name="android:background">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextLabel.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="Divider.Horizontal.DarkGray">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="Divider.Vertical.NoStickyEdges">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="AddressFields">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AddressFieldsLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>
</resources>
